<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/fragment_containerBl"
        android:padding="16dp">

        <!-- Forum Title -->
        <TextView
            android:id="@+id/textViewForumTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Community Blog"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <!-- Post 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@android:color/holo_blue_light">

            <!-- Post Author -->
            <TextView
                android:id="@+id/textViewPostAuthor1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alice Doe"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Post Content -->
            <TextView
                android:id="@+id/textViewPostContent1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I had an amazing ride today! The driver was friendly, and the car was comfortable. #HappyCustomer"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <!-- Comments for Post 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Comment 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="John Doe: Glad to hear that!"/>

            <!-- Comment 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jane Smith: I also had a great experience recently."/>
            <EditText
                android:id="@+id/editTextComment2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a comment..."
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/buttonPostComment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Comment"
                android:textColor="@color/ma_couleur"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Post 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@android:color/holo_blue_light">

            <!-- Post Author -->
            <TextView
                android:id="@+id/textViewPostAuthor2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bob Johnson"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Post Content -->
            <TextView
                android:id="@+id/textViewPostContent2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Just had the quickest ride ever! The driver was so efficient. #Impressed"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <!-- Comments for Post 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Comment 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emma White: That's awesome!"/>

            <!-- Comment 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alex Turner: I had a similar experience last week."/>
            <EditText
                android:id="@+id/editTextCommenttttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a comment..."
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/buttonPostCommenttttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Comment"
                android:textColor="@color/ma_couleur"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Post 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@android:color/holo_blue_light">

            <!-- Post Author -->
            <TextView
                android:id="@+id/textViewPostAuthor3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sophie Adams"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Post Content -->
            <TextView
                android:id="@+id/textViewPostContent3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Had a great ride with the most friendly driver. 5 stars! #TopService"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <!-- Comments for Post 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Comment 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jack Miller: That's fantastic!"/>


            <!-- Comment 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lily Brown: I need to try this service!"/>
            <EditText
                android:id="@+id/editTextCommenttt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Add a comment..."
                android:layout_marginTop="8dp"/>

            <Button
                android:id="@+id/buttonPostCommenttt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post Comment"
                android:textColor="@color/ma_couleur"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

        <!-- Post 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:background="@android:color/holo_blue_light">

            <!-- Post Author -->
            <TextView
                android:id="@+id/textViewPostAuthor4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Charlie Williams"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Post Content -->
            <TextView
                android:id="@+id/textViewPostContent4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="The app's new update is amazing! The user interface is so smooth and easy to navigate. #GreatImprovement"
                android:textSize="18sp"
                android:textStyle="italic"/>

        </LinearLayout>

        <!-- Comments for Post 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Comment 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="David Johnson: I noticed that too!"/>

            <!-- Comment 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sophie Evans: It's much better than before."/>


        </LinearLayout>

        <!-- Add more posts and comments as needed -->

        <!-- Comment Input Section -->
        <EditText
            android:id="@+id/editTextComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Add a comment..."
            android:layout_marginTop="8dp"/>

        <Button
            android:id="@+id/buttonPostComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Post Comment"
            android:textColor="@color/ma_couleur"
            android:layout_marginTop="8dp"/>


        <Button
            android:id="@+id/buttonPostCommentt"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:text="Post Comment"
            android:layout_gravity="end"

            android:layout_marginEnd="40dp"
            android:textColor="@color/ma_couleur" />
    </LinearLayout>

</ScrollView>
